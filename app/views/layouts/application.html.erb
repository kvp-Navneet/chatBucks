<!DOCTYPE html>
<html>
<head>
  <title>chatBucks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css">
  <script src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
   <div class="container">
    <div class="navbar-header">
      <%= link_to "ChatBucks", root_url, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="navbar-top">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to 'Newsfeed', home_all_activites_path %></li>
        <li class=" text-primary dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"><strong><%= current_user.name %></strong>
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#"><%= link_to 'My Profile', home_path %></a></li>
              <li><a href="#"><%= link_to 'Edit Profile', edit_user_path(current_user) %></a>
              </li>
              <li><a href="#"><%= link_to 'password settings', edit_user_registration_path %></a></li>
              <li><a href="#"><%= link_to 'Account Deactivate', deactivate_user_path(current_user)  %></a></li>
              <li><a href="#"><%= link_to('Sign out', destroy_user_session_path, method: :delete) %></a></li>
            </ul>
          </li>
          <% else %>
          <li><a href="/home/about">About</a></li>
          <li><%= link_to 'New member?', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="messages">
    <h4 class="notice text-danger text-center"><%= notice %></h4>
    <h4 class="alert text-danger text-center"><%= alert %></h4> 
  </div>
  <%= yield %>
</body>
</html>
