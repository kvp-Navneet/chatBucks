<div class="container">
  <div class="row">
    <div class="table-responsive">
      <table class="table table-hover" id="myTable">
       <caption>Available Members</caption>
       <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Add as Friend</th>
        </tr>
      </thead>
      <tbody id="myTable">
        <% for user in @users %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.location %></td>
          <td><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post,class:'btn btn-primary btn-sm' %></td>
        </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
  
</div>

<%= link_to 'Back', home_path ,class:'btn btn-warning btn-sm' %>
</div>
<script>
$(document).ready(function(){
  $('#myTable').DataTable();
});
</script>


