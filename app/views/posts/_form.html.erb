<div class="status">
	<%= form_for(@post) do |f| %>
	<div class="form-group">
		<h4>Update Status</h4>
		<%= f.text_area :content,  :class => "form-control", autofocus: true, placeholder: 'What\'s up?' %>
	</div>
	<div class="field">
		<%= fa_icon 'image' %>
		<%= f.file_field :attachment, class: 'btn btn-info fa fa-picture-o' %>
	</div>
	<div class="form-group">
		<%= f.submit 'Post', class: 'btn btn-primary'%>
	</div>
	<% end %>
</div>